{
  "name": "youtube-longform-studio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "remotion studio",
    "build": "remotion render VideoComposition out/video.mp4",
    "render": "remotion render VideoComposition out/video.mp4 --props=src/config.ts",
    "generate:script": "npx tsx generate-script.ts",
    "generate:voice": "npx tsx generate-voiceover.ts",
    "generate:bgm": "npx tsx generate-bgm.ts",
    "generate:thumbnail": "npx tsx generate-thumbnail.ts",
    "analyze:news": "npx tsx analyze-news.ts",
    "analyze:channel": "npx tsx analyze-channel.ts",
    "setup:assets": "npx tsx setup-assets.ts",
    "setup:sfx": "npx tsx setup-sfx.ts",
    "setup:bgm": "npx tsx setup-bgm.ts",
    "setup:all": "npm run setup:assets && npm run setup:sfx && npm run setup:bgm",
    "pipeline": "npm run analyze:news && npm run generate:script && npm run generate:voice && npm run generate:bgm && npm run generate:thumbnail && npm run build",
    "server": "npx tsx server.ts"
  },
  "dependencies": {
    "@remotion/cli": "^4.0.0",
    "@remotion/google-fonts": "^4.0.0",
    "@remotion/paths": "^4.0.0",
    "@remotion/transitions": "^4.0.0",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remotion": "^4.0.0",
    "sharp": "^0.33.0",
    "zod": "3.22.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/react": "^19.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0"
  }
}
